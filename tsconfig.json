{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "#config": ["src/config.ts"],
      "#errors": ["src/errors.ts"],
      "#errorCodes": ["src/errorCodes.ts"],
      "#utils": ["src/utils.ts"],
      "#doc2x/*": ["src/doc2x/*"],
      "#mcp/*": ["src/mcp/*"]
    },
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmitOnError": true
  },
  "include": ["src/**/*.ts"]
}
